<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/info_background"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvTitleAQI"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/disket_bold"
        android:gravity="center"
        android:text="@string/tvEscale"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTitleCity"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleCity" />

    <TextView
        android:id="@+id/tvAQI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/disket_regular"
        android:gravity="center"
        android:text="@string/emojiGreen"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleAQI"
        app:layout_constraintStart_toStartOf="@+id/tvTitleAQI"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleAQI" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/disket_bold"
        android:text="@string/tvStatus"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tvTitleCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleCity" />

    <TextView
        android:id="@+id/stateIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/emojiGreen"
        android:textColor="#2E7D32"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvState"
        app:layout_constraintStart_toStartOf="@+id/tvState"
        app:layout_constraintTop_toBottomOf="@+id/tvState" />

    <TextView
        android:id="@+id/tvTitleCity"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/disket_bold"
        android:gravity="center"
        android:text="Surubi-i, Mariano"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_location_link"
        app:layout_constraintBottom_toBottomOf="@+id/tvLink"
        app:layout_constraintEnd_toStartOf="@+id/tvLink"
        app:layout_constraintTop_toTopOf="@+id/tvLink" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoLink="phone"
        android:fontFamily="@font/disket_bold"
        android:text="@string/tvLinkGo"
        android:textColor="@color/link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>